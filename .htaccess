RewriteEngine on

RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

RewriteCond %{HTTP_HOST} ^imon.ch$
RewriteRule ^(.*)$ https://s.imon.ch/$1 [R=301,L]

RewriteCond %{HTTP_HOST} ^s.imon.ch$ [OR]
RewriteCond %{HTTP_HOST} ^simonroth.ch$
RewriteRule ^(.*)$ https://ch.linkedin.com/in/simon-roth [R=302,L]
